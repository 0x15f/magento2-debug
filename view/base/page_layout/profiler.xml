<?xml version="1.0"?>
<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <container name="root">
        <block class="Magento\Framework\View\Element\Template" name="debug.profiler"
               template="ClawRock_Debug::profiler.phtml">
            <block class="ClawRock\Debug\Block\Profiler" name="debug.profiler.summary"
                   template="ClawRock_Debug::profiler/summary.phtml" as="debug_profiler_summary"/>
            <block class="ClawRock\Debug\Block\Profiler\Menu" name="debug.profiler.sidebar"
                   template="ClawRock_Debug::profiler/sidebar.phtml" as="debug_profiler_sidebar">
                <block class="ClawRock\Debug\Block\Profiler\Search" name="debug.profiler.sidebar.search"
                       template="ClawRock_Debug::profiler/sidebar/search.phtml" as="debug_profiler_search"/>
                <block class="ClawRock\Debug\Block\Profiler\Menu" name="debug.profiler.sidebar.menu"
                       template="ClawRock_Debug::profiler/sidebar/menu.phtml" as="debug_profiler_menu">
                    <block class="ClawRock\Debug\Block\Profiler\Menu" name="request"
                           template="ClawRock_Debug::profiler/sidebar/menu/request.phtml"/>
                    <block class="ClawRock\Debug\Block\Profiler\Menu" name="time"
                           template="ClawRock_Debug::profiler/sidebar/menu/time.phtml"/>
                    <block class="ClawRock\Debug\Block\Profiler\Menu" name="database"
                           template="ClawRock_Debug::profiler/sidebar/menu/database.phtml"/>
                    <block class="ClawRock\Debug\Block\Profiler\Menu" name="event"
                           template="ClawRock_Debug::profiler/sidebar/menu/event.phtml"/>
                    <block class="ClawRock\Debug\Block\Profiler\Menu" name="layout"
                           template="ClawRock_Debug::profiler/sidebar/menu/layout.phtml"/>
                    <block class="ClawRock\Debug\Block\Profiler\Menu" name="translation"
                           template="ClawRock_Debug::profiler/sidebar/menu/translation.phtml"/>
                    <block class="ClawRock\Debug\Block\Profiler\Menu" name="model"
                           template="ClawRock_Debug::profiler/sidebar/menu/model.phtml"/>
                    <block class="ClawRock\Debug\Block\Profiler\Menu" name="cache"
                           template="ClawRock_Debug::profiler/sidebar/menu/cache.phtml"/>
                    <block class="ClawRock\Debug\Block\Profiler\Menu" name="config"
                           template="ClawRock_Debug::profiler/sidebar/menu/config.phtml"/>
                </block>
            </block>
            <container name="debug.profiler.panel" as="debug_profiler_panel"/>
        </block>
    </container>
</layout>
